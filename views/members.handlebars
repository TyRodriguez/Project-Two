<div class="section">
  <div class="container">
    {{!-- need handlebars here to import member name from login/signup? --}}
    <h1 class="title">Welcome <span class="member-name"></span></h1>
    <div class="columns">
      <div class="column is-8 is-offset-2">
        <div class="modal">
          <div class="modal-background"></div>
          <div class="modal-content">
            <div class="field">
              <label class="label is-medium" style="color: #CC3210">Restaurant Name</label>
              <div class="control has-icons-left has-icons-right">
                <input class="input is-medium" id="restaurantName" placeholder="Chubby's">
                <span class="icon is-left">
                </span>
                <span class="icon is-right">
                  <i class="fas fa-check fa-lg"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label class="label is-medium" style="color:#CC3210">Phone Number</label>
              <div class="control has-icons-left has-icons-right">
                <input class="input is-medium" id="phoneNumber" placeholder="420-420-6969">
                <span class="icon is-left">
                </span>
                <span class="icon is-right">
                </span>
              </div>
            </div>
            <div class="field">
              <label class="label is-medium" style="color:#CC3210">Address</label>
              <div class="control has-icons-left has-icons-right">
                <input class="input is-medium" id="address" placeholder="123 Broadway">
                <span class="icon is-left">
                </span>
                <span class="icon is-right">
                </span>
              </div>
            </div>
            <div class="field">
              <label class="label is-medium" style="color:aqua">Hours</label>
              <div class="control has-icons-left has-icons-right">
                <input class="input is-medium" id="hours" placeholder="8-6">
                <span class="icon is-left">
                </span>
                <span class="icon is-right">
                </span>
              </div>
            </div>
            <button class="button brickRedButton" id="addRestaurantButton">Add Restaurant</button>
            <button class="button brickRedButton" id="closeModal">Cancel</button>
          </div>
        </div>
        <div id="myRestaurants">
          <button class="button brickRedButton" id="addRestaurant">Add A Business</button>
        </div>
      </div>
    </div>
  </div>
</div>

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
